<h1>Add New Restaurant</h1>

<div>
    <form action="/add" method="post">

        <h3>Details</h3>
        <div>
            <label>Name:</label>
            <input type="text" name="name">
        </div>

        <div>
            <label>Street Address:</label>
            <input type="text" name="address.street">
        </div>

        <div>
            <label>Postal Code:</label>
            <input type="text" name="address.postal">
        </div>

        <div>
            <label>Owner:</label>
            <input type="text" name="owner">
        </div>

        <h3>District</h3>
        <div>
            <% districts.forEach(district =>{%>
                <input name="districts" value="<%= district._id %>" type="checkbox"/><%= district.district %>
            <% }) %>
        </div>

        <h3>Cuisines</h3>
        <div>
            <% cuisines.forEach(cuisine =>{%>
                <input name="cuisines" value="<%= cuisine._id %>" type="checkbox"/><%= cuisine.cuisine %>
            <% }) %>
        </div>

        <br>


        <button type="submit">Add Restaurant</button>
    </form>

</div>
